<script>
  const map = L.map('mapid').setView([48.85, 2.77], 10); // Coordonn√©es centr√©es sur √éle-de-France

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '¬© OpenStreetMap contributors'
  }).addTo(map);

  // Ajoute les fichiers GPX
  new L.GPX("https://https://ddefin.github.io/calendrier-cyclo/asterix_g2-19066527-1754252269-233.gpx", {
    async: true,
    marker_options: {
      startIconUrl: 'https://leafletjs.com/examples/custom-icons/leaf-green.png',
      endIconUrl: 'https://leafletjs.com/examples/custom-icons/leaf-red.png',
      shadowUrl: 'https://leafletjs.com/examples/custom-icons/leaf-shadow.png'
    }
  }).on('loaded', function(e) {
    map.fitBounds(e.target.getBounds());
  }).addTo(map);

  new L.GPX("https://ddefin/gpx/parcours-g2.gpx", {
    async: true
  }).addTo(map);
</script>

